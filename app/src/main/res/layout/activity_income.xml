<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp"
	tools:context="com.example.testing.accoutingapp.activity.IncomeActivity">

	<TextView
		android:text="Tên giao dịch: "
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"/>

	<EditText
		android:id="@+id/activity_income_edName"
		android:background="@drawable/text_background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"/>

	<TextView
		android:text="Số tiền: "
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"/>
	<EditText
		android:id="@+id/activity_income_edAmount"
		android:inputType="numberDecimal"
		android:background="@drawable/text_background"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"/>


	<TextView
		android:text="Mô tả giao dịch: "
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"/>
	<EditText
		android:id="@+id/activity_income_edDetail"
		android:background="@drawable/text_background"
		android:lines="10"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"/>

	<Button
		android:onClick="clickBtnExecute"
		android:text="Xác nhận"
		android:layout_gravity="center_horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>


</LinearLayout>
